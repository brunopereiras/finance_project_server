<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Entry category</th>
      <th>Name</th>
      <th>Value</th>
      <th>Date</th>
      <th>Should repeat</th>
      <th>Repeat for</th>
      <th>Entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.entry_category %></td>
        <td><%= entry.name %></td>
        <td><%= entry.value %></td>
        <td><%= entry.date %></td>
        <td><%= entry.should_repeat %></td>
        <td><%= entry.repeat_for %></td>
        <td><%= entry.entry %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

